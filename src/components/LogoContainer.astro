---
import { Image } from "astro:assets";
import Logo from "~/assets/images/IMG_moon1.png";
import { siteSlogan } from "~/data/config.js";
---

<div class="flex items-center gap-2 lg:gap-6">
	<Image src={Logo} alt="Digital Studio Logo" class="w-auto h-8 lg:h-12" />

	<div>
